@model List<TMV.Data.Entities.QuestionAnswerInfo>

@if (Model != null && Model.Count > 0)
{
    <div class="title"><b>HỎI ĐÁP LIÊN QUAN</b></div>
    <div class="tab tab8">
        <div class="dt-qa">
            @foreach (var item in Model)
            {
                <div>
                    <b>@item.Title</b>
                    <div>
                        @Html.Raw(Server.HtmlDecode(item.Question))
                        <br />
                        @Html.Raw(Server.HtmlDecode(item.Content))
                        <a href="@item.NavigationUrl" title="@item.Title">(Xem chi tiết)</a>
                    </div>
                </div>
            }
        </div>
    </div>
}