            </h2>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="column small-4">
                        <div class="w-box product" data-productid="29">
                            <figure>
                                <a href="@item.NavigationUrl" title="@item.Title">
                                    <img alt="@item.Title" src="@TMV.Utilities.Globals.ImageUrlNoCDN(item.ImagePath, 300, false)" title="@item.Title">
                                </a>
                            </figure>
                            <h3>
                                <a href="@item.NavigationUrl">@item.Title</a>
                            </h3>
                            <p></p>
                        </div>
                    </div>
                }

            </div>
            </div>
    </div>
</div>

