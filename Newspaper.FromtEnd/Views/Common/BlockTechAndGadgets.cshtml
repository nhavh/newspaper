@model TMV.Data.Entities.BlockModel

<div class="td_block_wrap td_block_1 td_uid_39_590ffa2861f8a_rand td_with_ajax_pagination td-pb-border-top td_block_template_1 td-column-2" data-td-block-uid=td_uid_39_590ffa2861f8a>
    @if (Model.ListMenu.Any())
    {
        
        <div class=td-block-title-wrap>
            <h4 class=block-title><span class=td-pulldown-size>TECH AND GADGETS</span></h4>
            <div class="td-pulldown-syle-default td-subcat-filter" id=td_pulldown_td_uid_39_590ffa2861f8a>
                <ul class=td-subcat-list id=td_pulldown_td_uid_39_590ffa2861f8a_list>
                    @foreach (var item in Model.ListMenu)
                    {
                        <li class=td-subcat-item>

                            <a class=td-subcat-link id="td_uid_@item.Id" data-td_filter_value="@item.Id" data-td_block_id=td_uid_39_590ffa2861f8a href="@item.NavigationUrl">@item.CategoryName</a>
                        </li>
                    }
                 </ul>
                <div class=td-subcat-dropdown>
                    <div class=td-subcat-more aria-haspopup=true>
                        <span>More</span><i class=td-icon-read-down></i>
                    </div><ul class=td-pulldown-filter-list></ul>
                </div>
            </div>
        </div>
    }

    <div id=td_uid_39_590ffa2861f8a class=td_block_inner>
        @if (Model.ListNews.Any())
        {
            <div class=td-block-row>
                @foreach (var item in Model.ListNews.Take(1))
                {
                    <div class=td-block-span6>
                        <div class="td_module_4 td_module_wrap td-animation-stack">
                            <div class=td-module-image>
                                <div class=td-module-thumb>
                                    <a href="@item.NavigationUrl" rel=bookmark title="@item.Title">
                                        <img width=324 height=235 class=entry-thumb src="/assets/wp-content/uploads/2015/04/headphones-324x235.jpg" alt="" title="@item.Title"/>
                                    </a>
                                </div> <a href="@item.NavigationUrl" class=td-post-category>@item.CategoryName</a>
                            </div>
                            <h3 class="entry-title td-module-title">
                                <a href="@item.NavigationUrl" rel=bookmark title="@item.Title">@item.Title</a>
                            </h3>
                            <div class=td-module-meta-info>
                                <span class=td-post-author-name><a href="@item.Title">John Doe</a> <span>-</span> </span> <span class=td-post-date><time class="entry-date updated td-module-date" datetime="@item.CreatedDate">@item.CreatedDate</time></span> <div class=td-module-comments>
                                    <a href="@item.NavigationUrl">0</a>
                                </div>
                            </div>
                            <div class=td-excerpt>
                                @Html.Raw(item.Description)
                            </div>
                        </div>
                    </div>
                }

                <div class=td-block-span6>
                    @foreach (var item in Model.ListNews.Skip(1))
                    {
                        <div class="td_module_6 td_module_wrap td-animation-stack">
                            <div class=td-module-thumb>
                                <a href="@item.NavigationUrl" rel=bookmark title="@item.Title"><img width=100 height=70 class=entry-thumb src="/assets/wp-content/uploads/2015/04/tee-100x70.jpg" alt="" title="Microsoft Subsumes Open Tech Unit Back Inside Mothership" /></a>
                            </div>
                            <div class=item-details>
                                <h3 class="entry-title td-module-title">
                                    <a href="@item.NavigationUrl" rel=bookmark title="@item.Title">@item.Title</a>
                                </h3>
                                <div class=td-module-meta-info>
                                    <span class=td-post-date><time class="entry-date updated td-module-date" datetime="@item.CreatedDate">@item.CreatedDate</time></span>
                                </div>
                            </div>
                        </div>
                    }
                   
                </div>
            </div>
        }
        
    </div>
    <div class=td-next-prev-wrap><a href="index.html#" class="td-ajax-prev-page ajax-page-disabled" id=prev-page-td_uid_39_590ffa2861f8a data-td_block_id=td_uid_39_590ffa2861f8a><i class="td-icon-font td-icon-menu-left"></i></a><a href="index.html#" class=td-ajax-next-page id=next-page-td_uid_39_590ffa2861f8a data-td_block_id=td_uid_39_590ffa2861f8a><i class="td-icon-font td-icon-menu-right"></i></a>
    </div>
</div>