@model List<TMV.Data.Entities.ArticleInfo>

@if (Model != null && Model.Count > 0)
{
    int i = 1;
    <div class="art-list">
        <div class="title" style="margin-bottom:15px;"><b>Bài viết liên quan</b></div>
        @foreach (TMV.Data.Entities.ArticleInfo item in Model)
        {
            <a href="@item.NavigationUrl" title="@item.Title" class="art-item @(i % 3 == 0 ? "fr" : "fl") @(i % 3 == 1 ? "mr" : "0")">
                <figure>
                    <img src="@TMV.Utilities.Globals.ImageUrl(item.Avatar, 230, false)" alt="@item.Title" />
                </figure>
                <b>@item.Title</b>
            </a>
            if (i == 3)
            { <div class="clr"></div> }
            i++;
        }
    </div>
}